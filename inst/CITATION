citHeader("To cite package 'arco' in publications use:")
     
 year <- sub(".*(2[[:digit:]]{3})-.*", "\\1", meta$Date, perl = TRUE)
 vers <- paste("R package version", meta$Version)
 
 citEntry(entry="Manual",
		  title = "arco: Pick a Color From a Tcl/tk chooseColor Widget",
		  author = personList(as.person("Thomas J. Leeper")),
		  year = year,
		  note = vers,
		  textVersion =
		  paste("Thomas J. Leeper (",
				year,
				"). arco: Pick a Color From a Tcl/tk chooseColor Widget. ",
				vers, ".", sep=""))